  id ="com.phonegap.example4"
  version ="1.0.0">
  
  <name> app4 DATOS DEL DISPOSITIVO Y EVENTOS</name>
  
  <description>
   Aplicacion que muestra los datos del dispositivo en el que es ejecutada y dos eventos que se realizan en el dispositivo.
  </description>
  
  <author href="https://buid.phonegap.com" email="lupita_030700@hotmail.com">
   Moreno Cruz Maria Guadalupe 4F 
  </author>
  
  <!--Personaliza la aplicaion y plataforma -->
  <preference name="orientation" value="deafault"/>
  <!--<preference name="orientation" value="portrait" />
  <preference name="orientation" value="landscape" /> -->
  <preference name="tragent-device" value="universal"/>
  <preference name="fullscreen" value="true"/>
  <preference name="android-installLocation" value="auto"/>
  <preference name="permissions" value="INTERNET"/>
  
  <!--Plugins-->
  <!--Core plugins-->
  <plugin name="cordova-plugin-device" spec="~1.1.4"/>
  <plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
  <plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>
  
